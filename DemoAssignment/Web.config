			<customErrors mode="On" defaultRedirect="~/DefaultError.html">
				<error statusCode="403" redirect="~/NoAccess.html"/>
				<error statusCode="404" redirect="~/FileNotFound.html"/>
			</customErrors>

			
			<authorization>
				<allow roles="Admin" />
				<deny users="*" />
			</authorization>
		</system.web>
	</location>
	<location path="AuthenticatedUser">
		<system.web>
			<authorization>
